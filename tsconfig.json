{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["./*.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/dist/**",
    "client/dist/**",
    "server/dist/**",
    "cypress/**"
  ]
}
